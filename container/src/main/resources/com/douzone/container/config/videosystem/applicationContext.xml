<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:property="http://www.springframework.org/schema/property"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd
        http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task.xsd">
	<!--  01. Bean 설정 : 초간단 -->
	<bean class="com.douzone.container.videosystem.Avengers"/>
	
	<!--  02. Bean 설정 : id 부여하기 -->
	<bean id="ironMan" class="com.douzone.container.videosystem.IronMan"/>
	
	<!--  03. Bean 설정 : 생성자 리터럴 사용 1 -->
	<bean id="avengerInfinityWar" class="com.douzone.container.videosystem.BlankDisc">
		<constructor-arg name="title" value="Avenger Infinity War"/>
		<constructor-arg name="studio" value="MARVEL"/>
	</bean>
	
	<!--  04. Bean 설정 : 생성자 리터럴 사용 2 -->
	<bean id="avengersEndgame" class="com.douzone.container.videosystem.BlankDisc" c:title="Avengers Endgame" c:studio="MARVEL" />
	
	<!--  05. Bean 설정 : 생성자 리터럴 사용 3 -->
	<bean id="avengersAgeOfUltron" class="com.douzone.container.videosystem.BlankDisc" c:_0="Avengers Age of Ultron" c:_1="MARVEL" />
		
	<!--  06. Bean 설정 : 생성자 null argument -->
	<bean id="avengersCaptainAmerica" class="com.douzone.container.videosystem.BlankDisc">
		<constructor-arg name="title" value="Avengers Captain America"/>
		<constructor-arg name="studio" value="MARVEL"/>
		<constructor-arg name="actors"> <null/></constructor-arg>
	</bean>	
	
	<!--  07. Bean 설정 : 생성자 Collection Argument -->
	<bean id="avengersDirectorEdition" class="com.douzone.container.videosystem.BlankDisc">
		<constructor-arg name="title" value="Avengers Director Edition"/>
		<constructor-arg name="studio" value="MARVEL"/>
		<constructor-arg name="actors"> 
			<list>
				<value>Robert Downey Jt.</value>
				<value>Chris Evans</value>
			</list>
		</constructor-arg>
	</bean>
		
	<!--  08. Bean 설정 : 생성자 Wiring Collection -->	
	<bean id="avengersTriplePack" class="com.douzone.container.videosystem.DVDPack"
			c:title="Avengers Triple Pack">
		<constructor-arg name="dvds" />
			<list>
				<ref bean="avengersDirectorEdition"/>
				<ref bean="avengersCaptainAmerica"/>
				<ref bean="avengersEndgame"/>
			</list>
	</bean>
	
	<!--  09. Bean 설정 : property 사용 1 -->
	<bean id="avengerExpansionEdition1" class="com.douzone.container.videosystem.BlankDisc">
		<property name="title" value="Avenger Expansion Edition1"/>
		<property name="studio" value="MARVEL"/>
	</bean>
	
	<!--  10. Bean 설정 : property 사용 2 -->
	<bean id="avengersDirectorEdition2" class="com.douzone.container.videosystem.BlankDisc"
			p:title="Avengers Director Edition2" p:studio="MARVEL">
		<property name="actors"> 
			<list>
				<value>Robert Downey Jt.</value>
				<value>Chris Evans</value>
			</list>
		</property>
	</bean>
		
	<!--  11. Bean 설정 : property 사용 3 -->
	<util:list id="actorList">
			<value>Robert Downey Jt.</value>
			<value>Chris Evans</value>
	</util:list>
	<bean id="avengersDirectorEdition3" class="com.douzone.container.videosystem.BlankDisc"
			p:title="Avengers Director Edition3"
			p:studio="MARVEL" 
			p:actors-ref="actorList">
	</bean>
	
	<!--  12. Bean 주입 : 생성자 주입 1 -->		
	<bean id="dvdPlayer1" class="com.douzone.container.videosystem.DVDPlayer">
		<constructor-arg ref="ironMan"/>
	</bean>
	
	<!--  13. Bean 주입 : 생성자 주입 2  : c-namespace의 Argument name문을 사용하는 방법 , Spring 3.xx부터 사용 가능 -->
	<bean id="dvdPlayer2" class="com.douzone.container.videosystem.DVDPlayer" c:dvd-ref="ironMan"/>
	
	<!--  14. Bean 주입 : 생성자 주입3  : c-namespace의 Argument index문을 사용하는 방법 , Spring 3.xx부터 사용 가능 -->
	<bean id="dvdPlayer3" class="com.douzone.container.videosystem.DVDPlayer" c:_0-ref="ironMan"/>
	
	<!--  15. Bean 주입 :  property 주입 1 -->
	<bean id="dvdPlayer4" class="com.douzone.container.videosystem.DVDPlayer">
		<property name="dvd" ref="ironMan"/>
		
	</bean>
	
	<!--  16. Bean 주입 : property 주입 2: p-namespace  -->
	<bean id="dvdPlayer5" class="com.douzone.container.videosystem.DVDPlayer" p:dvd-ref="ironMan"/>
	
</beans>
 
